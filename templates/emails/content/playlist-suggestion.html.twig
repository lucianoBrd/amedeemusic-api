{% extends "emails/base.html.twig" %}
{% block content %}
<!-- Section : Featured Playlist -->
{% if content.playlistImage or content.playlistTitle or content.playlistParagraph or content.playlistButton %}
  <table class="wrapper" cellpadding="0" cellspacing="0" role="presentation" width="100%">
    <tr>
      <td align="center" bgcolor="#F5F5F5">
        <!-- 500px Box -->
        <table class="container" cellpadding="0" cellspacing="0" role="presentation" width="500">
          <tr>
            <td class="col px-sm-30 pb-sm-30" align="left" bgcolor="#FFFFFF" style="padding:0px 50px 30px 50px;border-bottom-right-radius: 6px; border-bottom-left-radius: 6px;">
              <!-- Content -->
              <table cellpadding="0" cellspacing="0" role="presentation" width="100%" >
                <tr>
                  <td class="col px-sm-30 py-sm-20" width="100%" bgcolor="#FAFAFA" style="padding: 30px 50px;" align="center">
                    {% if content.playlistImage and content.playlistImage.image %}
                    <a href="{{ content.playlistButton ? (content.playlistButton.link ? content.playlistButton.link : '#') : '#' }}" style="text-decoration: none;">
                      {% include 'emails/content/shared/image.html.twig' with {'image': content.playlistImage, 'style': 'width: 240px; max-width: 100%;'} %}
                    </a>
                    {% endif %}
                    {% if content.playlistTitle %}
                    <div class="spacer py-sm-10" style="line-height: 20px;">â€Œ</div>
                    <h3 class="sm-hero-text" style="font-family: 'Quicksand', Helvetica, sans-serif ;font-size: 28px;line-height: 34px;font-weight: 500; color:#292929;margin: 0; margin-bottom: 15px;">
                      {{ content.playlistTitle }}
                    </h3>
                    {% endif %}
                    {% if content.playlistParagraph %}
                    <p class="paragraph-center" style="width: 70%;;font-family: 'Karla', Arial, sans-serif;font-size: 14px;line-height: 21px;font-weight: 400; color:#7E7E7E; margin: 0; margin-bottom: 0px ;">
                      {{ content.playlistParagraph }}
                    </p>
                    {% endif %}

                    {% include 'emails/content/shared/button.html.twig' with {'button': content.playlistButton, 'color': content.color, 'size': 'sm', 'spacer': true} %}
                  </td>
                </tr>
              </table>
              <!-- end Content -->
            </td>
          </tr>
        </table>
        <!-- end 500px box -->       
      </td>
    </tr>
  </table>
  {% endif %}
  <!-- end Section : Featured Playlist -->
{% endblock %}